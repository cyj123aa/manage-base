<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hoolink.manage.base.dao.mapper.ext.ManageMenuMapperExt">
  <resultMap id="BaseResultMap" type="com.hoolink.manage.base.dao.model.ManageMenu">
    <!--
    @mbggenerated
    -->
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="menu_name" jdbcType="VARCHAR" property="menuName" />
    <result column="url" jdbcType="VARCHAR" property="url" />
    <result column="menu_code" jdbcType="VARCHAR" property="menuCode" />
    <result column="priority" jdbcType="INTEGER" property="priority" />
    <result column="parent_id" jdbcType="BIGINT" property="parentId" />
    <result column="creator" jdbcType="BIGINT" property="creator" />
    <result column="updator" jdbcType="BIGINT" property="updator" />
    <result column="created" jdbcType="BIGINT" property="created" />
    <result column="updated" jdbcType="BIGINT" property="updated" />
    <result column="enabled" jdbcType="BIT" property="enabled" />
  </resultMap>
  <sql id="Base_Column_List">
    <!--
    @mbggenerated
    -->
    me.id, me.menu_name, me.url, me.menu_code, me.priority, me.parent_id, me.creator, me.updator, me.created, me.updated,
    me.enabled
  </sql>
  <select id="selectByExample" resultMap="BaseResultMap">
    <!--
    @mbggenerated
    -->
    select
    <include refid="Base_Column_List" />
    from manage_menu mm left join manage_menu me on mm.id=me.parent_id
    where mm.enabled=true and me.enabled=true and mm.menu_code=#{code} and me.menu_code=#{currentCode}
  </select>

  <resultMap id="UserCompanyMap" type="com.hoolink.manage.base.bo.TemporaryDeptBO">
    <association property="company" javaType="com.hoolink.manage.base.bo.DeptPositionBO">
      <id column="mc.id" jdbcType="BIGINT" property="id" />
      <result column="mc.dept_name" jdbcType="VARCHAR" property="deptName" />
      <result column="mc.dept_type" jdbcType="TINYINT" property="deptType" />
      <result column="mc.parent_id" jdbcType="BIGINT" property="parentId" />
    </association>
    <association property="dept" javaType="com.hoolink.manage.base.bo.DeptPositionBO">
      <id column="md.id" jdbcType="BIGINT" property="id" />
      <result column="md.dept_name" jdbcType="VARCHAR" property="deptName" />
      <result column="md.dept_type" jdbcType="TINYINT" property="deptType" />
      <result column="md.parent_id" jdbcType="BIGINT" property="parentId" />
    </association>
    <association property="position" javaType="com.hoolink.manage.base.bo.DeptPositionBO">
      <id column="mp.id" jdbcType="BIGINT" property="id" />
      <result column="mp.dept_name" jdbcType="VARCHAR" property="deptName" />
      <result column="mp.dept_type" jdbcType="TINYINT" property="deptType" />
      <result column="mp.parent_id" jdbcType="BIGINT" property="parentId" />
    </association>
  </resultMap>

  <select id="getTemporaryDept" parameterType="java.lang.Long" resultMap="UserCompanyMap">
    select mp.id,mp.dept_name,mp.dept_type,mp.parent_id,
    md.id,md.dept_name,md.dept_type,md.parent_id,
    mc.id,mc.dept_name,mc.dept_type,mc.parent_id from  manage_department mp
    left join manage_department md on mp.parent_id=md.id
    left join manage_department mc on md.parent_id=mc.id
    where mp.enabled=true
    and md.enabled=true
    and mc.enabled=true
    and mp.id in
    <foreach collection="positions" separator="," open="(" close=")" item="id">
      #{id}
    </foreach>
  </select>

</mapper>