<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hoolink.manage.base.dao.mapper.ext.ManageMenuMapperExt">
  <resultMap id="BaseResultMap" type="com.hoolink.manage.base.dao.model.ManageMenu">
    <!--
    @mbggenerated
    -->
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="menu_name" jdbcType="VARCHAR" property="menuName" />
    <result column="url" jdbcType="VARCHAR" property="url" />
    <result column="menu_code" jdbcType="VARCHAR" property="menuCode" />
    <result column="priority" jdbcType="INTEGER" property="priority" />
    <result column="parent_id" jdbcType="BIGINT" property="parentId" />
    <result column="creator" jdbcType="BIGINT" property="creator" />
    <result column="updator" jdbcType="BIGINT" property="updator" />
    <result column="created" jdbcType="BIGINT" property="created" />
    <result column="updated" jdbcType="BIGINT" property="updated" />
    <result column="enabled" jdbcType="BIT" property="enabled" />
  </resultMap>
  <sql id="Base_Column_List">
    <!--
    @mbggenerated
    -->
    me.id, me.menu_name, me.url, me.menu_code, me.priority, me.parent_id, me.creator, me.updator, me.created, me.updated,
    me.enabled
  </sql>
  <select id="selectByExample" resultMap="BaseResultMap">
    <!--
    @mbggenerated
    -->
    select
    <include refid="Base_Column_List" />
    from manage_menu mm left join manage_menu me on mm.id=me.parent_id
    where mm.enabled=true and me.enabled=true and mm.menu_code=#{code} and me.menu_code=#{currentCode}
  </select>

  <resultMap id="ResultMap" type="com.hoolink.manage.base.bo.MiddleRoleMenuBO">
    <id column="id" jdbcType="BIGINT" property="menuId" />
    <result column="parent_id" jdbcType="BIGINT" property="parentId" />
    <result column="menu_name" jdbcType="VARCHAR" property="menuName" />
    <result column="permission_flag" jdbcType="INTEGER" property="permissionFlag" />
  </resultMap>

  <select id="getRoleMenu" parameterType="java.lang.Long" resultMap="ResultMap">
    select IFNULL(mm.parent_id ,0) as parent_id,mrm.permission_flag,mm.id, mm.menu_name
    from middle_role_menu mrm left join manage_menu mm on mm.id=mrm.menu_id
    where mm.enabled=true and mrm.role_id=#{roleId}
  </select>

</mapper>